<div id="update_dropdowns">
<% @topic_levels.each_index do |i| %>
	<select id="topic_update_dropdown_<%= i %>" <%= "style=display:none" if i > 0 %> onchange="topicDropdownChanged('topic_update_dropdown_<%= i %>')" >
  	<option value="default_select_<%= i %>" selected="true">Select Topic <%= i %></option>
		<% @topic_levels[i].each do |topic| %>
			<option value="<%= topic.parent_id.to_s + "_" + topic.id.to_s %>"><%= topic.topic %></option>
		<% end %>
	</select></br>
<% end %>
</div>
<%= form_for :@new_flashcard, :url => "/create" do |f|%>
	<input id="update_id_field" type="text" name="flashcard[id]" hidden="hidden">
	<span class="update_label">Date:</span><input id="update_date_field" type="text" name="flashcard[date]" ></br>
	<div id="update_topics">
		<% @topic_levels.each_index do |i| %>
		<span class="update_label">Topic Level <%= i %>:</span><input id="update_topic_field_<%= i %>" type="text" name="flashcard[topic_level_<%= i %>]" oninput="updateTopicTextBoxChanged(<%= i %>)" size="50"><br/>
		<% end %>
	</div>
	<span class="update_label">Question:</span><input id="update_question_field" type="text" name="flashcard[question]" size="80"><br/>
	<span class="update_label">Answer:</span><input id="update_answer_field" type="text" name="flashcard[answer]" size="80"><br/>
	<span class="update_label">Source:</span><input id="update_source_field" type="text" name="flashcard[source]" size="80"><br/>
	<span class="update_label">Importance:</span>
	<div id="update_importance_buttons">
		<% 5.times do |j| %>
			<% i = j + 1 %>
			<% checked = "" %>
			<% checked = 'checked="checked"' if i == 3 %>
			<% s = i.to_s + "<input type=\"radio\" id=\"radio_importance_" + i.to_s + "\" name=\"flashcard[importance]\" value=\"" + i.to_s + "\"" + checked + ">" %>
			<%= s.html_safe %>
		<% end %>
	</div>
	<span class="update_label">Comprehension:</span>
	<div id="update_comprehension_buttons">
		<% 5.times do |j| %>
			<% i = j + 1 %>
			<% checked = "" %>
			<% checked = 'checked="checked"' if i == 3 %>
			<% s = i.to_s + "<input type=\"radio\" id=\"radio_comprehension_" + i.to_s + "\" name=\"flashcard[comprehension]\" value=\"" + i.to_s + "\"" + checked + ">" %>
			<%= s.html_safe %>
		<% end %>
	</div>
	<%= f.submit %>
<% end %>
